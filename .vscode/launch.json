{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests - Shared",
            "type": "debugpy",
            "request": "launch",
            "program": "shared/run_tests.py",
            "console": "integratedTerminal"
        },{
            "name": "Scraper (Interactive)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/main.py",
            "console": "integratedTerminal",
            "args": [
                "-o", "${input:scraperOptions}",
                "-n", "${input:numPages}",
                "--log-level", "INFO"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },{
            "name": "Scraper - ALL",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scraper/main.py",
            "console": "integratedTerminal",
            "args": [
                "--log-level", "INFO"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },{
            "name": "Processor (Interactive)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/processor/main.py",
            "console": "integratedTerminal",
            "args": [
                "-a", "${input:processorActions}",
                "-o", "${input:processorOptions}",
                "--log-level", "INFO"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },{
            "name": "Processor - Full action (Interactive)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/processor/main.py",
            "console": "integratedTerminal",
            "args": [
                "-a", "${input:processorActions}",
                "--log-level", "INFO"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },{
            "name": "Processor - INIT DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/processor/main.py",
            "console": "integratedTerminal",
            "args": [
                "--init-db"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },{
            "name": "Processor - TEST LAUNCH MODELS",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/processor/model_performance_tester.py",
            "console": "integratedTerminal",
            "env": {},
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "scraperOptions",
            "type": "pickString",
            "description": "Select scraper options",
            "options": [
                "prices",
                "sales",
                "launches",
                "contacts",
                "trials"
            ],
            "default": "prices"
        },
        {
            "id": "processorOptions",
            "type": "pickString",
            "description": "Select the type of entity to process",
            "options": [
                "prices",
                "sales",
                "launches",
                "articles"
            ],
            "default": "prices"
        },
        {
            "id": "processorActions",
            "type": "pickString",
            "description": "Select the action to perform",
            "options": [
                "parse",
                "process",
                "connect",
                "upload"
            ],
            "default": "parse"
        },
        {
            "id": "numPages",
            "type": "promptString",
            "description": "Enter number of pages to scrape (0 for all)",
            "default": "1"
        }
    ]
}